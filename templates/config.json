{
  "project": {
    "name": "my-project",
    "description": "",
    "version": "1.0.0"
  },
  "sprint": {
    "max_sprints": 10,
    "default_capacity": 20,
    "planning_max_loops": 3,
    "implementation_max_loops": 20,
    "qa_max_loops": 5,
    "review_max_loops": 2,
    "max_rework_cycles": 3
  },
  "rate_limiting": {
    "max_calls_per_hour": 100,
    "wait_between_calls_seconds": 5
  },
  "circuit_breaker": {
    "no_progress_threshold": 3,
    "same_error_threshold": 5,
    "output_decline_threshold": 70
  },
  "testing": {
    "unit_test_command": "npm test",
    "coverage_command": "npm run coverage",
    "min_coverage_percent": 85
  },
  "agent": {
    "model": "claude-sonnet-4-20250514",
    "timeout_minutes": 15,
    "output_format": "text"
  },
  "paths": {
    "backlog_file": "backlog.json",
    "sprint_state_file": ".sprinty/sprint_state.json",
    "config_file": ".sprinty/config.json",
    "sprints_dir": "sprints",
    "reviews_dir": "reviews",
    "logs_dir": "logs"
  }
}
