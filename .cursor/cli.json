{
  "permissions": {
    "allow": [
      "Shell(git)",
      "Shell(git status)",
      "Shell(git diff)",
      "Shell(git add)",
      "Shell(git commit)",
      "Shell(npm)",
      "Shell(npm test)",
      "Shell(npm install)",
      "Shell(npm run)",
      "Shell(npx)",
      "Shell(bats)",
      "Shell(pytest)",
      "Shell(go test)",
      "Shell(cargo test)",
      "Shell(make)",
      "Shell(ls)",
      "Shell(cat)",
      "Shell(head)",
      "Shell(tail)",
      "Shell(grep)",
      "Shell(find)",
      "Shell(mkdir)",
      "Shell(touch)",
      "Shell(echo)",
      "Shell(jq)",
      "Read(**/*)",
      "Write(src/**/*)",
      "Write(lib/**/*)",
      "Write(tests/**/*)",
      "Write(docs/**/*)",
      "Write(examples/**/*)",
      "Write(specs/**/*)",
      "Write(@fix_plan.md)",
      "Write(@AGENT.md)",
      "Write(PROMPT.md)",
      "Write(README.md)",
      "Write(*.md)",
      "Write(*.json)",
      "Write(*.ts)",
      "Write(*.tsx)",
      "Write(*.js)",
      "Write(*.jsx)",
      "Write(*.py)",
      "Write(*.go)",
      "Write(*.rs)",
      "Write(*.sh)"
    ],
    "deny": [
      "Shell(rm -rf /)",
      "Shell(rm -rf ~)",
      "Shell(sudo)",
      "Read(.env)",
      "Read(.env.*)",
      "Write(.env)",
      "Write(.env.*)",
      "Read(**/*.key)",
      "Write(**/*.key)"
    ]
  }
}
